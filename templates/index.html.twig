{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="assets/css/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="assets/css/chosen.min.css">
    <link rel="stylesheet" type="text/css" href="assets/css/style.css">
{% endblock %}
{% block body %}


<div class="container">
    {% for message in app.flashes('notice') %}
        <div class="alert alert-warning alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            {{ message }}
        </div>
    {% endfor %}

    <div class="header clearfix">
    <nav>
      <ul class="nav nav-pills pull-right">
        <li class="active"><a href="/">Home</a></li>
        <li ><a href="/listar">Listar</a></li>
      </ul>
    </nav>
    {% if users is defined %}
        <h3 class="text-muted">Editando usuario {{users.name}}</h3>
    {% else %}
        <h3 class="text-muted">Formuario de cadastro</h3>
    {% endif %}
    </div>

    <div class="row">
        <div class="col-md-12">
            <form role="form" class="navbar-form navbar-left form-inline" action="{% if users is defined %}/endereco/user/edit/{{users.id}}{% else %}/endereco/save{% endif %} " id="cadastro" name="cadastro" method="post" accept-charset="utf-8">
                <div class="form-group col-md-10">
                    <label class="col-md-1" for="nome">Nome</label>
                    <div class="col-md-8">
                        <input type="text" id="nome" name="nome" value="" class="form-control " placeholder="Nome" value="{% if users is defined %} {{users.name}} {% endif %}">
                    </div>
                </div>
                <div class="form-group col-md-10">
                    <label class="col-md-1" for="uf">Estado</label>
                    <div class="col-md-8">
                        <select name="uf" id="uf" class="change-cidade form-control">
                            {% if users is defined %}
                                <option value="{{users.uf}}">{{users.uf}}</option>}
                            {% else %}
                                <option value="">Selecione o estado</option>
                            {% endif %}
                        </select>
                    </div>
                </div>
                <div class="form-group col-md-10">
                    <label class="col-md-1" for="cidade">Cidade</label>
                    <div class="col-md-8">
                        <select  name="cidade" id="cidade" class="form-control">
                            <option value="">Selecione a cidade</option>
                        </select>
                    </div>
                </div>
                <div class="form-group col-md-10">
                    <label class="col-md-1" for="cep">Cep</label>
                    <div class="col-md-8">
                        <input type="tel" name="cep" id="cep" class="form-control" value=" {% if users is defined %} {{users.cep}} {% endif %}">
                        <input class="btn btn-default" type="button" value="Buscar" id="btn-buscar-cep">
                    </div>
                </div>
                <div class="form-group col-md-10">
                    <label class="col-md-1" for="bairro">Bairro</label>
                    <div class="col-md-8">
                        <input class="form-control" type="text" readonly name="bairro" value=" {% if users is defined %} {{users.bairro}} {% endif %}" id="bairro">
                    </div>
                </div>
                <div class="form-group col-md-10">
                    <label class="col-md-1" for="logradouro">Rua</label>
                    <div class="col-md-8">
                        <input class="form-control" type="text" readonly name="logradouro" id="logradouro" value=" {% if users is defined %} {{users.logradouro}} {% endif %}">
                    </div>
                </div>
                <div class="col-md-1">
                </div>
                <div class="col-md-8">
                    {% if users is defined %}
                    <input class="btn btn-default" type="submit" value="Editar">
                    {% else %}
                    <input class="btn btn-default" type="submit" value="Enviar">
                    {% endif %}
                </div>
            </form>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
<script src="/assets/js/jquery-1.11.3.min.js" type="text/javascript" charset="utf-8"  ></script>
<script src="/assets/js/bootstrap.min.js" type="text/javascript" charset="utf-8"  ></script>
<script src="/assets/js/chosen.jquery.min.js" type="text/javascript" charset="utf-8"  ></script>
<script src="/assets/js/main.js" type="text/javascript" charset="utf-8" async defer></script>
<script src="/assets/js/jquery.blockUI.js" type="text/javascript" charset="utf-8" ></script>
<script src="/assets/js/jquery.mask.js" type="text/javascript" charset="utf-8" ></script>
<script src="/assets/js/jquery.validate.js" type="text/javascript" charset="utf-8" ></script>
{% endblock %}